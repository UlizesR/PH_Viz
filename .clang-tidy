---
# PH_Viz clang-tidy configuration
# Run with: clang-tidy src/**/*.cpp -- -I src -I external/glad/include

Checks: >
  -*,
  modernize-*,
  readability-*,
  performance-*,
  bugprone-*

WarningsAsErrors: ''

# Modernize checks
CheckOptions:
  - key: modernize-use-nullptr.AllowedTypes
    value: ''
  - key: modernize-use-auto.MinTypeNameLength
    value: 5
  - key: readability-identifier-naming.NamingConvention
    value: lower_case
  - key: readability-identifier-naming.MemberPrefix
    value: m
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.EnumConstantCase
    value: CamelCase
  - key: readability-identifier-naming.FunctionCase
    value: lower_case

# Ignore system headers
SystemHeaders: true

